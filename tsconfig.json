{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@tests/*": [
                "tests/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "index.ts",
        "tests",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
    "lib": [
        "es2015"
    ]
}