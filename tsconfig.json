{
    "compilerOptions": {
        "types": [
            "vitest/globals"
        ],
        "module": "NodeNext",
        "esModuleInterop": false,
        "target": "ES2024",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "#src/*": [
                "src/*"
            ],
            "tests/*": [
                "tests/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "index.ts",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}